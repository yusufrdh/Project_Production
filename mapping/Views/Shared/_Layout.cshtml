<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PT Kaltim Prima Coal</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: #f4f6f8;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .navbar {
            background-color: #ffffff;
            box-shadow: 0 2px 15px rgba(0,0,0,0.03);
            padding: 0.8rem 0;
        }
        
        .nav-link {
            font-weight: 700;
            color: #64748b !important;
            transition: all 0.2s;
            padding: 0.6rem 1.2rem !important;
            border-radius: 8px;
            font-size: 0.95rem;
            margin-right: 5px;
            display: flex;
            align-items: center;
        }

        .nav-link:hover {
            color: #D52B1E !important; /* KPC RED */
            background-color: rgba(213, 43, 30, 0.05);
        }

        /* LOGIC ACTIVE STATE (REVISI 1) */
        .nav-link.active {
            color: #ffffff !important; /* Teks Putih */
            background-color: #D52B1E !important; /* Background Merah */
            box-shadow: 0 4px 6px rgba(213, 43, 30, 0.25); /* Shadow Merah */
        }

        /* Icon Active ikut putih */
        .nav-link.active i { color: #ffffff !important; }
        /* Icon Inactive warna abu */
        .nav-link:not(.active) i { color: #64748b; }
        /* Icon Hover warna merah */
        .nav-link:not(.active):hover i { color: #D52B1E; }

        footer {
            margin-top: auto;
            background: white;
            border-top: 1px solid #e2e8f0;
            padding: 1.5rem 0;
            font-size: 0.9rem;
            color: #64748b;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-4 sticky-top">
            <div class="container-fluid px-4">
                <a class="navbar-brand me-5" asp-area="" asp-controller="PitUi" asp-action="Index">
                    <img src="~/image/logokpc.png" alt="KPC Logo" style="height: 45px;"> 
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "PitUi" ? "active" : "")" 
                               asp-area="" asp-controller="PitUi" asp-action="Index">
                                <i class="bi bi-geo-alt-fill me-2"></i> Pit Mapping
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "ProductUi" ? "active" : "")" 
                               asp-area="" asp-controller="ProductUi" asp-action="Index">
                                <i class="bi bi-bar-chart-steps me-2"></i> Production Mapping
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid px-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center">
        <div class="container">
            &copy; 2026 - PT Kaltim Prima Coal - Internal System
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>